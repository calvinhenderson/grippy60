# Kconfig for ZMK IMU Mouse Behavior

DT_COMPAT_ZMK_BEHAVIOR_IMU_MOUSE := zmk,behavior-imu-mouse

config ZMK_BEHAVIOR_IMU_MOUSE
    bool "Enable IMU Mouse Behavior"
    default $(dt_compat_enabled,$(DT_COMPAT_ZMK_BEHAVIOR_IMU_MOUSE))
    help
      Enable this behavior to use an IMU (Inertial Measurement Unit)
      to control the mouse cursor.
